@model Product

<form method="get" asp-controller="sales" asp-action="ProductDetailsPartial">
    <div class="form-group">
        <div @* class="col-2" *@>
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div @* class="col-6" *@>
            <input type="text" asp-for="Name" class="form-control" readonly disabled @* Dzieki disabled, pole z nazwa nie poswietla sie po kliknieciu *@/>
        </div>

        <div @* class="col-2" *@>
            <label asp-for="Price" class="col-form-label"></label>
        </div>
        <div @* class="col-6" *@>
            <input type="text" asp-for="Price" class="form-control" value="@string.Format("{0:c}", @Model.Price)" readonly disabled/>
        </div>
    </div>
</form>
