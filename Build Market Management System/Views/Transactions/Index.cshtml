@model TransactionViewModel

<div class = "row align-items-end">
	<div class= "col-3">
		<label for="inputPassword5" class="form-label">Cashier Name</label>
		<input type="text" class="form-control">
	</div>
	<div class= "col-3">
		<label for="inputPassword5" class="form-label">Start Date</label>
		<input type="text" class="form-control" >
	</div>
	<div class= "col-3">
		<label for="inputPassword5" class="form-label">End Date</label>
		<input type="text" class="form-control" >
	</div>
	<div class= "col d-flex">
	<form asp-action="search" method="post" asp-controller="transactions" class="w-100">
		<input type="submit" value="Submit" class="btn btn-primary w-100"/>
	</form>
	</div>
	<div class= "col d-flex">
	<form asp-action="print" method="post" asp-controller="transactions" class="w-100">
		<input type="submit" value="Print" class="btn btn-primary w-100"/>
	</form>
	</div>
</div>

<br />

<div class = "row">
	<div class="col">
			@*List of transactions*@
			@await Component.InvokeAsync("Transactions", "Default Cashier")
	</div>
</div>