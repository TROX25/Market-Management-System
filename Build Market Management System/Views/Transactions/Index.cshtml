@model TransactionsViewModel

<h3>Transactions Report</h3>
<br />

<form asp-action="Search" asp-controller="Transactions" method="post" class="row g-3 align-items-end">
	<div class = "row align-items-end">
		<div class= "col-3">
			<label asp-for="CashierName" class="form-label"></label>
			<input type="text" asp-for="CashierName" class="form-control">
		</div>
		<div class= "col-3">
			<label asp-for="StartDate" class="form-label"></label>
			<input type="date" asp-for="StartDate" class="form-control">
		</div>
		<div class= "col-3">
			<label asp-for="EndDate" class="form-label"></label>
			<input type="date" asp-for="EndDate" class="form-control">
		</div>
		<div class= "col d-flex">
			<input type="submit" value="Submit" class="btn btn-primary w-100"/>
		</div>
		<div class= "col d-flex">
			<input type="submit" value="Print" class="btn btn-primary w-100"/>
		</div>
	</div>
</form>

<br />

@if (Model.Transactions != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Date Time</th>
                <th>Cashier Name</th>
                <th>Product Name</th>
                <th>Quantity Before</th>
                <th>Quantity Sold</th>
                <th>Quantity After</th>
                <th class="text-end">Price</th>
                <th class="text-end">Sold Amt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tran in Model.Transactions)
            {
                <tr>
                    <td>@tran.TimeStamp.ToString("yyyy-MM-dd hh:mm")</td>
                    <td>@tran.CashierName</td>
                    <td>@tran.ProductName</td>
                    <td>@tran.BeforeQuantity</td>
                    <td>@tran.SoldQuantity</td>
                    <td>@(tran.BeforeQuantity - tran.SoldQuantity)</td>
                    <td style="text-align:right">@(string.Format("{0:c}", tran.Price))</td>
                    <td style="text-align:right">@(string.Format("{0:c}", tran.SoldQuantity * tran.Price))</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6">&nbsp;</td>
                <td style="text-align:right">
                    <b>Grand Total:</b>
                </td>
                <td style="text-align:right">
                    <b>
                        @(string.Format("{0:c}", Model.Transactions.Sum(x => x.Price * x.SoldQuantity)))
                    </b>
                </td>
            </tr>
        </tfoot>
    </table>
}
